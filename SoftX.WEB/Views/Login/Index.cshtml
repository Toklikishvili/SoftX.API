@{
    Layout = null;
}
<!DOCTYPE html>

<html >
<head>
    <title>Login</title>
    <link href="~/css/style.default.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/d5c8a6985e.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <div class="page-holder d-flex align-items-center">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-5 col-lg-7 mx-auto mb-5 mb-lg-0">
                    <div class="pr-lg-5">
                        <img src="~/img/login-animate.gif" alt="" class="img-fluid" />
                    </div>
                </div>
                <div class="col-lg-5 px-lg-4">
                    <h1 class="text-base text-primary text-uppercase mb-4">Login Here</h1>
                    <h2 class="mb-4">Welcome Back!</h2>
                    @using (Html.BeginForm("LogIn", "Login"))
                    {
                        <div class="form-group mb-4">
                            <input type="email" name="txtLoginEmail" class="form-control border-0 shadow form-control-lg text-base" placeholder="Email" required />
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" name="txtLoginPassword" class="form-control border-0 shadow form-control-lg text-base" placeholder="Password" required />
                    
                        </div>
                      
                        <button type="submit" class="btn btn-primary" style="height:50px;width:500px;">LOGIN</button>

                        <div class="mt-3">
                            <p class="mb-8">Don't have an account? <a href="/SignUp">Sign Up</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>